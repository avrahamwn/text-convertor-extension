{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "name": "המרת טקסט עברית-אנגלית",
  "version": "0.0.5",
  "description": "Keyboard letters conversion from Hebrew to English and inverse",
  "manifest_version": 3,
  "author": "Avraham Weinstein",
  "action": {
    "default_popup": "index.html",
    "default_title": "המרת טקסט עברית-אנגלית"
  },
  "icons": {
    "16": "assets/text-convertor-icon16.png",
    "32": "assets/text-convertor-icon32.png",
    "48": "assets/text-convertor-icon48.png",
    "128": "assets/text-convertor-icon128.png"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
